generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id    Int      @id @default(autoincrement())
  title String
  user  String   @default("")
  done  Boolean  @default(false)
  date  DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
}
